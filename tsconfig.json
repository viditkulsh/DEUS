{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "network-infrastructure/**/*.js",
    "security/**/*.js",
    "development/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}